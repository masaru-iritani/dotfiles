[branch]
        sort = -committerdate

[commit]
        verbose = true

[core]
        excludesfile = ~/.gitignore
        fsmonitor = true
        pager = delta
        untrackedCache = true

[delta]
        hyperlinks = true
        line-numbers = true

[diff]
        algorithm = histogram
        colorMoved = plain
        mnemonicPrefix = true
        renames = true

[fetch]
        all = true
        prune = true
        pruneTags = true

[help]
        autocorrect = prompt

[init]
        defaultBranch = main

[merge]
        conflictstyle = zdiff3 

[pull]
        rebase = true

[push]
        autoSetupRemote = true
        default = simple
        followTags = true

[rebase]
        autoSquash = true
        autoStash = true
        updateRefs = true

[rerere]
        autoupdate = true
        enabled = true

[tag]
        sort = version:refname

